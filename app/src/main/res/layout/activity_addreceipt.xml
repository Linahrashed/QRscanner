<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="164dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/usertv1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="60dp"
            android:layout_weight="1"
            android:fontFamily="@font/chivo_black"
            android:text="User ID:"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/usertv"
            android:layout_width="259dp"
            android:layout_height="46dp"
            android:layout_marginTop="60dp"
            android:layout_weight="1"
            android:fontFamily="@font/chivo_black"
            android:text="usertv"
            android:textSize="20sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/usersss"
            android:layout_width="74dp"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/chivo_black"
            android:text="Name:"
            android:textSize="20sp"></TextView>

        <TextView
            android:id="@+id/useritems"
            android:layout_width="262dp"
            android:layout_height="50dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/chivo_black"
            android:text="name"
            android:textSize="20sp"></TextView>


    </LinearLayout>

    <android.widget.Button
        android:id="@+id/send_receipt_button"
        android:layout_width="176dp"
        android:layout_height="161dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:background="@drawable/rounded_button"
        android:onClick="onSendReceiptButtonClicked"
        android:text="Send Receipt"
        android:textSize="20sp"
        android:textColor="#00516e" />

</LinearLayout>

